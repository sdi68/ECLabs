<extension version="3.*" type="library" method="upgrade">
    <name>LIB_ECLABS</name>
    <libraryname>eclabs</libraryname>
    <description>LIB_ECLABS_DESCRIPTION</description>
    <version>__DEPLOYMENT_VERSION__</version>
    <creationDate>21.01.2025</creationDate>
    <author>ECL</author>
    <authorEmail>info@econsultlab.ru</authorEmail>
    <authorUrl>https://econsultlab.ru</authorUrl>
    <copyright>Copyright © 2023 ECL - All Rights Reserved</copyright>
    <license>https://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <namespace path="src">ECLABS\Library</namespace>
    <dlid prefix="download_key" ecltype = "free" suffix=""/>

    <scriptfile>script.php</scriptfile>

    <!-- Language files -->
    <languages folder="language">
        <language tag="ru-RU">ru-RU/lib_eclabs.sys.ini</language>
        <language tag="ru-RU">ru-RU/lib_eclabs.ini</language>
        <language tag="en-GB">en-GB/lib_eclabs.sys.ini</language>
        <language tag="en-GB">en-GB/lib_eclabs.ini</language>
    </languages>

    <layouts destination="libraries/eclabs" folder="layouts">
        <folder>blocks</folder>
        <folder>fields</folder>
    </layouts>

    <media folder="media" destination="eclabs">
        <folder>css</folder>
        <folder>images</folder>
        <folder>js</folder>
        <file>joomla.assets.json</file>
    </media>

    <files>
        <folder>vendor</folder>
        <folder>src</folder>
        <file>eclabs.xml</file>
    </files>

    <updateservers>
        <server type="extension" priority="1" name="ECLabs library: library">
            https://econsultlab.ru/component/swjprojects/jupdate?element=lib_eclabs
        </server>
    </updateservers>
</extension>
