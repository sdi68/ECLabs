<extension version="3.9" type="library" method="upgrade">
	<name>ECLabs Library</name>
	<description>Econsult Labs Library - используется с расширениями от Econsult Labs</description>
	<version>1.0.7</version>
	<creationDate>24.05.2023</creationDate>
	<author>Econsult Labs</author>
	<authorEmail>info@econsultlab.ru</authorEmail>
	<authorUrl>https://econsultlab.ru</authorUrl>
	<copyright>Copyright © 2023 ECL - All Rights Reserved</copyright>
	<license>https://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>

	<libraryname>eclabs</libraryname>
	<scriptfile>script.php</scriptfile>

	<!-- Language files -->
	<languages folder="language">
		<language tag="ru-RU">ru-RU/ru-RU.eclabs.ini</language>
		<language tag="en-GB">en-GB/en-GB.eclabs.ini</language>
	</languages>

	<updateservers>
		<server type="extension" priority="1" name="Econsult Labs Library">
			https://econsultlab.ru/uploads/joomla/packages/eclabs/libraries/eclabs/update_eclabs.xml
		</server>
	</updateservers>

	<files>
		<file>eclabs.xml</file>
		<folder>fields</folder>
		<folder>helpers</folder>
		<folder>layouts</folder>
		<folder>classes</folder>
	</files>

	<media folder="media" destination="eclabs">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<file>joomla.assets.json</file>
	</media>
</extension>
